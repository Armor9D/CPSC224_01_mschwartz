public static void Pet()
{
    private String name;
    private String animal;
    private int age;
    
}
public static void setName(String newName)
{
    name = newName;
}

public static void setAnimal(String newAnimal)
{
    animal = newAnimal;
}

public static void  setAge(int newAge)
{
    age = newAge;
}

public static String getName()
{
    return name;
}

public static String getAnimal()
{
    return animal;
}

public static int getAge()
{
    return age;
}

public static void main(String[] args)
{
    Scanner scan = new Scanner (System.in);
    Pet dog;
    String temp;
    int age;
    
    System.out.println("Enter the name of the animal: ");
    temp = scan.nextline();
    dog.setName(temp);
    
    System.out.println("Enter the tyoe of the animal: ");
    temp = scan.nextline();
    dog.setAnimal(temp);
    
    System.out.println("Enter the age of the animal: ");
    age = scan.nextInt();
    dog.setAge(age);
    
    System.out.println("The " + dog.getAnimal() + " named " + dog.getName()
                       + " is " dog.getAge() + " years old.");
}








